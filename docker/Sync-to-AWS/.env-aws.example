# =====================================
# Y-CRM AWS 部署環境變數
# =====================================
# ⚠️ 重要：請將所有 52.195.151.185 替換為您的 AWS 實例 IP
# ⚠️ 如：52.195.151.185
# =====================================

# =====================================
# Core runtime configuration (shared)
# =====================================
NODE_ENV=production
IS_DEBUG_MODE=false
VITE_IS_DEBUG_MODE=false
SIGN_IN_PREFILLED=false
APP_SECRET=__REPLACE_WITH_RANDOM_SECRET__

# =====================================
# Networking & URLs
# ⚠️ 必須修改：將 52.195.151.185 替換為實際 AWS IP
# =====================================
EXTERNAL_HOST=your-aws-ip
FRONTEND_PORT=8866
BACKEND_PORT=8867
POSTGRES_PORT=5432
REDIS_PORT=6379
NODE_PORT=8867

FRONTEND_URL=http://your-aws-ip:8866
BACKEND_URL=http://your-aws-ip:8867
SERVER_URL=http://your-aws-ip:8867
BACKEND_PUBLIC_URL=http://your-aws-ip:8867

# =====================================
# Database & Cache
# =====================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=default
POSTGRES_URL=postgres://postgres:postgres@postgres:5432/default
PG_DATABASE_URL=postgres://postgres:postgres@postgres:5432/default
REDIS_URL=redis://redis:6379

# =====================================
# Feature toggles & workspace
# =====================================
IS_MULTIWORKSPACE_ENABLED=false
IS_WORKSPACE_CREATION_LIMITED_TO_SERVER_ADMINS=true
DEFAULT_SUBDOMAIN=app

# =====================================
# Timeline retention
# =====================================
TIMELINE_RETENTION_DAYS=180

# =====================================
# Billing (disabled in this environment)
# =====================================
IS_BILLING_ENABLED=false
BILLING_STRIPE_API_KEY=sk_test_placeholder_key_for_development
BILLING_STRIPE_BASE_PLAN_PRODUCT_ID=prod_placeholder

# =====================================
# Email SMTP configuration
# =====================================
EMAIL_DRIVER=SMTP
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=__REPLACE_WITH_EMAIL_USER__
EMAIL_SMTP_PASSWORD=__REPLACE_WITH_EMAIL_PASSWORD__
EMAIL_FROM_ADDRESS=__REPLACE_WITH_EMAIL_FROM_ADDRESS__
EMAIL_FROM_NAME=Twenty_CRM

# =====================================
# Google integrations
# ⚠️ 必須修改：Callback URLs 中的 52.195.151.185
# =====================================
MESSAGING_PROVIDER_GMAIL_ENABLED=true
CALENDAR_PROVIDER_GOOGLE_ENABLED=true
AUTH_GOOGLE_CLIENT_ID=__REPLACE_WITH_GOOGLE_CLIENT_ID__
AUTH_GOOGLE_CLIENT_SECRET=__REPLACE_WITH_GOOGLE_CLIENT_SECRET__
AUTH_GOOGLE_CALLBACK_URL=http://your-aws-ip:8867/auth/google/redirect
AUTH_GOOGLE_APIS_CALLBACK_URL=http://your-aws-ip:8867/auth/google-apis/get-access-token

# =====================================
# AI services
# =====================================
OPENAI_API_KEY=__REPLACE_WITH_OPENAI_API_KEY__

# =====================================
# LINE Services
# =====================================
LINE_CHANNEL_ACCESS_TOKEN=__REPLACE_WITH_LINE_CHANNEL_ACCESS_TOKEN__
LINE_CHANNEL_SECRET=__REPLACE_WITH_LINE_CHANNEL_SECRET__
